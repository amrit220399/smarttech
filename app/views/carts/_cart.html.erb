<div class="container">
<% unless cart.cart_items.empty? %>
<h2>Your Cart</h2>
<table class="table table-borderless table-hover">
	<%= render(cart.cart_items) %>
	<tr>
		<td colspan="4">Total</td>
		<td class="total_cell"><%= number_to_indian_currency(cart.total_price)  %></td>
	</tr>
</table>
<% session[:amount] = cart.total_price %>
<%= button_to 'Empty Cart', cart, :method => :delete, :confirm => 'Are you sure?', class: "btn btn-danger" %>
<br/>
	<%= link_to "Continue Shopping", "home/mobile_gallery" , class: "btn btn-warning", style: "color:white" %> 
	<% if user_signed_in? && !session[:cart_id].nil?%>
<%= link_to "Checkout" ,session[:cart_id].to_s + "/checkout" , class: "btn btn-primary", style: "color:white;float:right"%>
	<% else %>
	<%= link_to "Login To Checkout", new_user_session_path, class: "btn btn-primary", style: "color:white;float:right"%>
	<% end %>

<% end %>
</div>